// Maximum and Minimum of an array using minimum number of comparisons
#include <iostream>
#include <algorithm>
using namespace std;

int main()
{
    int max, min;
    int n;
    int array[100];
    cout << "Number of elements you want to enter : " << endl;
    cin >> n;
    cout << "Enter the elements : " << endl;
    for (int i = 0; i < n; i++)
    {
        cin >> array[i];
    }
    sort(array, array + n);
    for (int i = 0; i < n; i++)
    {
        min = array[0];
        max = array[n - 1];
    }
    cout << "The maximum element in the array is: " << max << endl;
    cout << "The minimum element in the array is: " << min;

    return 0;
}
